<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<nifty>
  <useStyles filename="nifty-default-styles.xml"/>
  <useControls filename="nifty-default-controls.xml"/>
  <screen id="start" controller="dynamicLoad.MyStartScreen">
    <layer childLayout="absolute" id="layer2">
      <image filename="Interface/imgs/img1.png" height="100%" id="image0" width="100%" x="0" y="0"/>
    </layer>
    <layer childLayout="absolute" id="layer3">
      <panel childLayout="absolute" height="30%" id="panel0" style="nifty-panel-simple" backgroundImage="Interface/imgs/bgp.png" width="50%" x="212" y="215" alpha="30%">
        <control font="aurulent-sans-16.fnt" height="46px" id="label0" name="label" text="This is a serious learning adventure game" width="391px" x="2px" y="35"/>
        <control childLayout="center" height="33px" id="button0" label="Continue" name="button" x="73" y="101">
            <interact onClick="startGame(hud)" />
        </control>
       
        <control childLayout="center" height="32px" id="button1" label="Quit" name="button" x="192" y="101">
            <interact onClick="quitGame()"/>
        </control>
      </panel>
    </layer>
  </screen>
  <screen id="hud" controller="dynamicLoad.MyStartScreen">
    <layer childLayout="absolute" id="layer2">
      <image filename="Interface/imgs/img1.png" height="100%" id="image0" width="100%" x="0" y="0"/>
    </layer>
</screen>
</nifty>
